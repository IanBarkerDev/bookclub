head
   title Search Results

   script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
   link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", crossorigin="anonymous")
   script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js", integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS", crossorigin="anonymous")   script(src="/js/navbar.js")
   
   script(src="/js/navbar.js")
   script(src="/js/serv-int.js")
   
   script.
      var username = !{JSON.stringify(username)};
   
   script(type="text/javascript").
      $(document).ready(function() {
         $("#nav-logout").on("click", function() {
            userLogout();
         })
         
         $(".add-to-collection").on("click", function() {
            userAdd($(this).parent().attr("id").slice(6), username);
         })
      })


body
   nav.navbar.navbar-default.navbar-fixed-top
      div.container
         div.navbar-header
            button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#main-menu", aria-expanded="false")
               span.sr-only Toggle Navigation
               span.icon-bar
               span.icon-bar
               span.icon-bar
            a.navbar-brand(href="/user/" + username) Book Club
         div.navbar-collapse.navbar-right.collapse#main-menu
            ul.nav.navbar-nav
               li
                  a.btn.btn-default#my-profile-nav(href="/user/" + username) My Profile
               li.dropdown
                  a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false")
                     | Search
                     span.caret
                  ul.dropdown-menu
                     li
                        form.navbar-form#nav-user-search(role="search", action="javascript:userSearch()")
                           div.form-group
                              input.form-control#nav-user-search-input(type="text", placeholder="Search")
                              label.form-label(for="nav-isbn") ISBN:
                              input.form-input#nav-isbn(type="radio", name="nav-form", value="ISBN")
                              label.form-label(for="nav-author") Author:
                              input.form-input#nav-author(type="radio", name="nav-form", value="author")
                              label.form-label(for="nav-user") User:
                              input.form-input#nav-user(type="radio", name="nav-form", value="user")
                           button.btn.btn-default(type="submit") Search
         ul.nav.navbar.navbar-right
            li
               button.btn.btn-default#nav-logout(type="button") Log Out


   div.container-fluid#main-section
      div.container
         h1 Search Results
         div.search-results
            each val, index in results
               div.search-result(id="result" + val.ISBN)
                  div.clickable
                     img.book-img(src=val.img, alt=val.title + " Image")
                     p.book-title= val.title
                  button.btn.btn-default.add-to-collection Add to Collection
                  
   footer
      p.footer &copy; 2015 Book Club