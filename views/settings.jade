body
   include navbar

   div.container-fluid#change-password
      div.container
         div.panel.panel-default
            div.panel-heading
               h2.panel-title Change Password
            div.panel-body
               form.form-group(action="/user/" + username + "/new_password", method="post")
                  label.form-label(for="current_password") Current Password
                  br
                  if(issue === "current")
                     input.form-input.form-input-error#current_password(type="password", name="current_password", placeholder="Password incorrect")
                  else
                     input.form-input#current_password(type="password", name="current_password")
                  br
                  label.form-label(for="new_password") New Password
                  br
                  input.form-input#new_password(type="password", name="password")
                  br
                  label.form-label(for="confirm_password") Confirm Password
                  br
                  if(issue === "confirm")
                     input.form-input.form-input-error#confirm_password(type="password", name="confirm_password", placeholder="Password doesn't match")
                  else
                     input.form-input#confirm_password(type="password", name="confirm_password")
                  br

                  button.btn.btn-default(type="submit") Change Password

   div.container-fluid#change-information
      div.container
         div.panel.panel-default
            div.panel-heading
               h2.panel-title Change Information
            div.panel-body
               form.form-group(action="/user/" + username + "/update_profile", method="post")
                  // input text
                  label.form-label(for="name") Name
                  br
                  if(name)
                     input.form-input#name(type="text", value="#{name}", name="name")
                  else
                     input.form-input#name(type="text", name="name")
                  br
                  
                  label.form-label(for="city") City
                  br
                  if(city)
                     input.form-input#city(type="text", value="#{city}", name="city")
                  else
                     input.form-input#city(type="text", name="city")
                  br
                  
                  label.form-label(for="state") State
                  br
                  if(state)
                     input.form-input#state(type="text", value="#{state}", name="state")
                  else
                     input.form-input#state(type="text", name="state")

                  br
                  // radios
                  label.form-label(for="private_email") Private Email
                  if(!emailVisible)
                     input.form-input.form-input-checkbox#private_email(type="checkbox", name="privacy[]", value="email", checked)
                  else
                     input.form-input.form-input-checkbox#private_email(type="checkbox", name="privacy[]", value="email")
                     
                  label.form-label(for="private_profile") Private Profile
                  if(!personalVisible)
                     input.form-input.form-input-checkbox#private_profile(type="checkbox", name="privacy[]", value="profile", checked)
                  else
                     input.form-input.form-input-checkbox#private_profile(type="checkbox", name="privacy[]", value="profile")
                     
                  label.form-label(for="private_collection") Private Collection
                  if(!book_collectionVisible)
                     input.form-input.form-input-checkbox#private_collection(type="checkbox", name="privacy[]", value="collection", checked)
                  else
                     input.form-input.form-input-checkbox#private_collection(type="checkbox", name="privacy[]", value="collection")
                  br
                  button.btn.btn-default(type="submit") Change Information

   include footer