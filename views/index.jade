body
   div.container-fluid#pathing
      div.container
      h1.text-center Welcome to Book Club
         div.col-lg-12.login-signup-box
            div.login-signup-links
               a.btn.btn-default.link#login-button(href="/login.html") Log In
               a.btn.btn-default.link#signup-button(href="/signup.html") Sign Up
   div.container-fluid#features
      div.container
         div.row
            div.col-lg-6.feature
               i.fa.fa-usd
               p.text-center Use Book Club to display your collection online!
            div.col-lg-6.feature
               i.fa.fa-bookmark
               p.text-center Look at your friends' collections too!
         div.row
            div.col-lg-6.feature
               i.fa.fa-arrow-right
               p.text-center Send trade requests for other user's books!
            div.col-lg-6.feature
               i.fa.fa-check
               p.text-center Book collection updated regularly!
