link(rel="stylesheet", href="/css/navbar.css")

nav.navbar.navbar-default.navbar-fixed-top
      div.container
         div.navbar-header
            button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#main-menu", aria-expanded="false")
               span.sr-only Toggle Navigation
               span.icon-bar
               span.icon-bar
               span.icon-bar
            a.navbar-brand(href="/") Book Club
         div.navbar-collapse.navbar-right.collapse#main-menu
            ul.nav.navbar-nav
               li
                  if username
                     a.btn.btn-default#my-profile-nav(href=("/user/" + username)) My Profile
                  else
                     a.btn.btn-default#my-profile-nav(href="/") Home
               li.dropdown
                  a.btn.btn-default.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false")
                     | Search 
                     span.caret
                  ul.dropdown-menu
                     li
                        form.navbar-form#nav-user-search(role="search", action="javascript:userSearch()")
                           input.form-control#nav-user-search-input(type="text", placeholder="Search")
                           div.form-group.navbar-form-choices
                              label.nav-form-label(for="nav-isbn") ISBN:
                              input.nav-form-input.nav-form-input-radio#nav-isbn.checked(type="radio", name="nav-form-radio", value="ISBN")
                              label.nav-form-label(for="nav-author") Author:
                              input.nav-form-input.nav-form-input-radio#nav-author(type="radio", name="nav-form-radio", value="author")
                              label.nav-form-label(for="nav-user") User:
                              input.nav-form-input.nav-form-input-radio#nav-user(type="radio", name="nav-form-radio", value="user")
                              button.btn.btn-default#nav-form-submit(type="submit") Search
               li
                  button.btn.btn-default#nav-logout(type="button") Log Out
